{
	"manifest_version": 3,
	"name": {
		"en-US": "Rettiwt-Auth Helper",
		"_default": "en-US"
	},
	"version": {
		"license": "MPL2.0"
	},
	"description": {
		"en-US": "A browser extension for authenticating Rettiwt-API.",
		"_default": "en-US"
	},
	"summary": {
		"en-US": "Easily get the API key for authenticating Rettiwt-API, with the click of a button.",
		"_default": "en-US"
	},
	"categories": {
		"firefox": ["web-development", "websites"]
	},
	"homepage": {
		"en-US": "https://rishikant181.github.io/Rettiwt-API/",
		"_default": "en-US"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "rettiwt-auth-helper@rishikant181.com"
		}
	},
	"permissions": ["cookies", "storage", "tabs"],
	"host_permissions": ["*://x.com/*"],
	"incognito": "spanning",
	"background": {
		"scripts": ["js/background.js"]
	},
	"action": {
		"default_popup": "pages/popup.html"
	}
}
